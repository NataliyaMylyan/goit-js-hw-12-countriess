{{#each this}}
{{!-- <li class="country-item"> --}}
    <h2 class="country-name">{{name}}</h2>
    <div class="card-wrapper">
        <div class="country-description">
            <p class="capital"><span class="font">Capital: </span>{{capital}}</p>
            <p class="population"><span class="font">Population: </span>{{population}}</p>
            <ul class='official-languages-list' class='font'>Languages:
                {{#each this.languages}}
                <li class="languages-item">{{name}}</li>
                {{/each}}
            </ul>
        </div>

        <div class="flag-wrapper">
            <img src="{{flag}}" alt="{{name}}" width="200" class='country-flag'>
        </div>
    </div>
    {{!--
</li> --}}
{{/each}}